          <sante>C</sante>
        </ingredient>
        <ingredient>
          <nom>crème fraîche</nom>
          <imageURL>https://img-3.journaldesfemmes.fr/pUzNKw36E8HB2OKK7WZX4iuD-_U=/1500x/smart/023459ccd92e4d70b05f0bc82a6cf72d/ccmcms-jdf/24991222.jpg</imageURL>
          <sante>D</sante>
        </ingredient>
        <ingredient>
          <nom>noix</nom>
          <imageURL>https://www.magasinduchef.com/11221-large_default/cerneaux-de-noix-noble-1kg.jpg</imageURL>
          <sante>A</sante>
        </ingredient>
