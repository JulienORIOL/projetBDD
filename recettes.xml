    <recette id="recette_gnocchis_gorgonzola">
        <titre>Gnocchis à la Sauce Gorgonzola et Noix</titre>
        <imageRecetteURL>https://img-global.cpcdn.com/recipes/de728ea92c99ddb0/680x482cq70/gnocchis-maison-sauce-gorgonzola-mascarpone-et-noix-photo-principale-de-la-recette.jpg</imageRecetteURL>
        <description>Des gnocchis tendres servis avec une sauce au fromage Gorgonzola crémeuse et garnis de noix croquantes.</description>
        <gastronomie>Italienne</gastronomie>
        <budget>20</budget>
        <tempsPreparation>30</tempsPreparation>
        <ingredients>
            <nom>gnocchis</nom>
            <imageURL>https://iod.keplrstatic.com/api/ar_1.25,g_north,c_fill/ar_1.5,w_800,q_70,c_fill,f_auto,dpr_auto/mon_marche/GNOCCHIS_POMME_DE_TERRE_FRAICHE_400G.jpg</imageURL>
            <quantite>500</quantite>
            <unite>grammes</unite>
            <sante>B</sante>
        </ingredients>
        <ingredients>
            <nom>fromage Gorgonzola</nom>
            <imageURL>https://www.gourmet-versand.com/img_article_v3/176688-gorgonzola-piccante-fromage-bleu-dop-palzola.jpg</imageURL>
            <quantite>200</quantite>
            <unite>grammes</unite>
            <sante>C</sante>
        </ingredients>
        <ingredients>
            <nom>crème fraîche</nom>
            <imageURL>https://img-3.journaldesfemmes.fr/pUzNKw36E8HB2OKK7WZX4iuD-_U=/1500x/smart/023459ccd92e4d70b05f0bc82a6cf72d/ccmcms-jdf/24991222.jpg</imageURL>
