    <!-- On définit des recettes qui vont pouvoir être inclues dans nos menus -->
    <recette id="recette_poulet_curry">
        <titre>Poulet au curry</titre>
        <description>Poulet tendre dans une sauce curry onctueuse avec du riz !</description>
        <gastronomie>Indienne</gastronomie>
        <budget>25</budget>
        <tempsPreparation>45</tempsPreparation>
        <ingredients>
            <nom>poulet</nom>
            <quantite>400</quantite>
            <unite>grammes</unite>
            <sante>B</sante>
        </ingredients>
        <ingredients>
            <nom>pâte de curry</nom>
            <quantite>3</quantite>
            <unite>cuillères à soupe</unite>
            <sante>C</sante>
        </ingredients>
        <etapes>Faire revenir le poulet dans une poêle</etapes>
        <etapes>Ajouter la pâte de curry et la crème, puis laisser mijoter</etapes>
    </recette>

    <recette id="recette_spaghetti_carbonara">
        <titre>Spaghetti Carbonara</titre>
        <description>Spaghetti avec une sauce crémeuse au lard et au fromage !</description>
        <gastronomie>Italienne</gastronomie>
        <budget>20</budget>
        <tempsPreparation>30</tempsPreparation>
        <ingredients>
            <nom>spaghetti</nom>
            <quantite>500</quantite>
            <unite>grammes</unite>
            <sante>B</sante>
        </ingredients>
        <ingredients>
            <nom>lardons</nom>
            <quantite>150</quantite>
            <unite>grammes</unite>
            <sante>D</sante>
        </ingredients>
        <etapes>Cuire les spaghetti al dente</etapes>
        <etapes>Faire revenir les lardons et préparer la sauce</etapes>
    </recette>

    <recette id="recette_salade_césar">
        <titre>Salade César</titre>
        <description>Salade croquante avec poulet grillé, croûtons et sauce César !</description>
        <gastronomie>Americaine</gastronomie>
        <budget>15</budget>
        <tempsPreparation>25</tempsPreparation>
        <ingredients>
            <nom>laitue</nom>
            <quantite>1</quantite>
            <unite>unité</unite>
            <sante>A</sante>
        </ingredients>
        <ingredients>
            <nom>poulet</nom>
            <quantite>200</quantite>
            <unite>grammes</unite>
            <sante>B</sante>
        </ingredients>
        <ingredients>
            <nom>sauce César</nom>
            <quantite>10</quantite>
            <unite>millilitres</unite>
            <sante>C</sante>
        </ingredients>
        <etapes>Griller le poulet et préparer la salade</etapes>
        <etapes>Ajouter les croûtons et la sauce</etapes>
    </recette>

    <recette id="recette_ratatouille">
        <titre>Ratatouille</titre>
        <description>Mélange de légumes méditerranéens lentement mijotés !</description>
        <gastronomie>Française</gastronomie>
        <budget>18</budget>
        <tempsPreparation>60</tempsPreparation>
        <ingredients>
            <nom>courgette</nom>
            <quantite>2</quantite>
            <unite>unités</unite>
            <sante>A</sante>
        </ingredients>
        <ingredients>
            <nom>aubergine</nom>
            <quantite>1</quantite>
            <unite>unité</unite>
            <sante>A</sante>
        </ingredients>
        <etapes>Faire revenir chaque légume séparément</etapes>
        <etapes>Mélanger les légumes et laisser mijoter à feu doux</etapes>
    </recette>
